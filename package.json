{
  "name": "ruler-and-compass",
  "version": "1.2.0",
  "description": "Ruler and Compass",
  "main": "src/main.js",
  "unpkg": "dist/rac.min.js",
  "author": "Maic López Sáenz",
  "license": "MIT",
  "repository": "github:lopsae/rac",
  "homepage": "https://lopsae.github.io/rac",
  "files": [
    "src/**/*.js",
    "built/*.js",
    "dist/*.js"
  ],
  "scripts": {
    "start": "npm test && grunt serve",
    "test": "jest",
    "test:clean": "rm -rf ./coverage",
    "test:fresh": "npm run test:clean; npm test",
    "test:coverage": "jest --coverage && npm run test:open",
    "test:c": "npm run test:coverage",
    "test:cc": "npm run test:clean; npm run test:coverage",
    "test:open": "open ./coverage/lcov-report/index.html",
    "docs": "grunt --debug makeDocs && npm run docs:open",
    "docs:open": "open ./docs/documentation/latest/index.html",
    "docs:clean": "git checkout HEAD -- docs/documentation/latest built/docs_home.md",
    "docs:fresh": "npm run docs:delete && npm run docs",
    "docs:delete": "rm -rfv docs/documentation/latest/*",
    "pages": "cd docs; bundle exec jekyll serve",
    "dist": "npm test && grunt dist"
  },
  "devDependencies": {
    "grunt": "^1.3.0",
    "grunt-browserify": "^5.3.0",
    "grunt-contrib-connect": "^3.0.0",
    "grunt-contrib-uglify": "^5.0.1",
    "grunt-contrib-watch": "^1.1.0",
    "grunt-exec": "^3.0.0",
    "grunt-jsdoc": "^2.4.1",
    "jest": "^26.6.3",
    "minami-rac": "1.3.1-dev"
  },
  "jest": {
    "testMatch": [
      "**/tests/**/*.tests.js"
    ]
  }
}
