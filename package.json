{
  "name": "ruler-and-compass",
  "version": "0.10.0-dev",
  "description": "Ruler and Compass",
  "main": "src/main.js",
  "files": [
    "src/*",
    "built/*",
    "dist/*",
    "tests/*"
  ],
  "scripts": {
    "test": "jest",
    "test:clean": "rm -rf ./coverage",
    "test:fresh": "npm run test:clean && npm test",
    "test:coverage": "jest --coverage",
    "test:c": "jest --coverage",
    "test:cc": "rm -rf ./coverage; npm run test:coverage",
    "test:open": "open ./coverage/lcov-report/index.html",
    "start": "npm test && grunt serve",
    "dist": "npm test && grunt dist",
    "docs": "grunt --debug jsdoc && open ./docs/docs/latest/index.html",
    "docs:clean": "git checkout HEAD -- docs/docs/latest",
    "docs:fresh": "npm run docs:clean && npm run docs",
    "docs:delete": "rm -rfv docs/docs/latest/*",
    "jekyll": "cd docs; bundle exec jekyll serve"
  },
  "author": "Maic López Sáenz",
  "license": "MIT",
  "devDependencies": {
    "grunt": "^1.3.0",
    "grunt-browserify": "^5.3.0",
    "grunt-contrib-connect": "^3.0.0",
    "grunt-contrib-watch": "^1.1.0",
    "grunt-exec": "^3.0.0",
    "grunt-jsdoc": "^2.4.1",
    "jest": "^26.6.3",
    "minami-rac": "file:../minami-rac/minami-rac-1.3.1-dev.tgz"
  },
  "dependencies": {
    "npm": "^7.6.0"
  },
  "jest": {
    "testMatch": [
      "**/tests/**/*.tests.js"
    ]
  }
}
